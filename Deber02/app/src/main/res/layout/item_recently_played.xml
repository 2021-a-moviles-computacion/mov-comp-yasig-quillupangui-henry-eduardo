<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_item_recientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item_recently"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/recien" />
            <TextView
                android:id="@+id/txt_itemCard_recently1"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center_vertical"
                android:text="Lo mas escuchado"
                android:textColor="@color/white1"
                android:textSize="11sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/img_item_recently1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/batalla" />

            <TextView
                android:id="@+id/txt_itemCard_recently"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="Batalla CDMX"
                android:textColor="@color/white1"
                android:textSize="11sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/img_item_recently2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/regueton" />

            <TextView
                android:id="@+id/txt_itemCard_recently2"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="Regueton"
                android:textColor="@color/white1"
                android:textSize="11sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/img_item_recently3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/mix" />

            <TextView
                android:id="@+id/txt_itemCard_recently3"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="Mix Regueton"
                android:textColor="@color/white1"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>