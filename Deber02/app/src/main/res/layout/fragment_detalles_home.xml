<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".DetallesHome">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_Principal_Home_Item"
            android:layout_width="232dp"
            android:layout_height="197dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/jump_back_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_Principal_Home_Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Daily Mix 5"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="88dp"
            android:background="@drawable/ic_play_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_Principal_Home_Item"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_playlist"
            android:layout_width="395dp"
            android:layout_height="419dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/btn_dots_playlist"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="44dp"
            android:background="@drawable/ic__962b4b9495c7d5510d4b9f9e2e866fb"
            app:layout_constraintBottom_toBottomOf="@+id/img_Principal_Home_Item"
            app:layout_constraintStart_toEndOf="@+id/img_Principal_Home_Item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.121"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btn_back_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="320dp"
            android:background="@drawable/ic__back"
            app:layout_constraintBottom_toBottomOf="@+id/btn_dots_playlist"
            app:layout_constraintEnd_toStartOf="@+id/btn_dots_playlist"
            app:layout_constraintTop_toTopOf="@+id/btn_dots_playlist"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/txt_DescripciónPlaylist"
            android:layout_width="219dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:text="José José, Javier Solís, Juan Gabriel and more"
            android:textColor="@color/menos_white"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_Principal_Home_Item" />

        <TextView
            android:id="@+id/txt_madePlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made for Elver"
            android:textColor="@color/menos_white"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_DescripciónPlaylist" />

        <TextView
            android:id="@+id/txt_DuracionPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h50min"
            android:textColor="@color/menos_white"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_madePlaylist" />

        <ImageButton
            android:id="@+id/btn_likePlaylist"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic__heart2"
            app:layout_constraintEnd_toEndOf="@+id/txt_DuracionPlaylist"
            app:layout_constraintStart_toStartOf="@+id/txt_DuracionPlaylist"
            app:layout_constraintTop_toBottomOf="@+id/txt_DuracionPlaylist"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>